<h1>Create Job</h1>
<form id="jobForm" action="/job" method="POST" class="job-posting-form">
    <div class="form-group">
        <label for="company">Company Name</label>
        <input type="text" id="company" name="company">
        <div id="company-error" class="error-message"></div>
    </div>

    <div class="form-group">
        <label for="job_description">Job Description</label>
        <textarea id="job_description" name="job_description" rows="4"></textarea>
        <div id="job_description-error" class="error-message"></div>
    </div>

    <div class="form-group">
        <label for="compensation">Compensation</label>
        <input type="text" id="compensation" name="compensation">
        <div id="compensation-error" class="error-message"></div>
    </div>

    <div class="form-group">
        <label for="mode">Mode of Work</label>
        <select id="mode" name="mode">
            <option value="Remote">Remote</option>
            <option value="Onsite">Onsite</option>
            <option value="Hybrid">Hybrid</option>
        </select>
        <div id="mode-error" class="error-message"></div>
    </div>

    <div class="form-group">
        <label for="category">Category</label>
        <input type="text" id="category" name="category">
        <div id="category-error" class="error-message"></div>
    </div>

    <button type="submit" class="submit-button">Post Job</button>
</form>